<title>RegExp validation</title> 
<script language="JavaScript"> 
function validate() { 
var doc = document.test;   
    
var valName = new RegExp("^[a-zA-Z]{4,10}$"); 
if (doc.Name.value.match(valName) == null) { 
alert("用户名只能为字母！字数4到10位！请重新输入！"); 
} else { 
doc.Name.value = doc.Name.value.replace(valName, "T. Patton"); 
} 
       
var valPwd = new RegExp("^[a-zA-Z0-9]{6,12}$"); 
if (doc.pwd.value.match(valPwd) == null) { 
alert("密码只能输入字母或数字，不区分大小写！字符个数6到12！"); 
} } 

</script>
